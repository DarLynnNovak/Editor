<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=EDGE,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/styles/application")
    @RenderSection("CssContent", false)
    @Scripts.Render("~/Scripts/modernizr")
    @Scripts.Render("~/Scripts/application")
    <title>
        @RenderSection("TitleContent", false)
    </title>
    @Html.Partial(MVC.Shared.Views._GoogleAnalytics)
</head>
<body>
    <header id="header-main">
        <div id="header-top" class="visible-sm visible-md visible-lg">
            @Html.Partial(MVC.Shared.Views._Logo1)
        </div>
        <div id="header-middle">
            <div class="layout-container">@RenderSection("NavBar", false)</div>
        </div>
        <div id="header-bottom" class="visible-xs">
            @Html.Partial(MVC.Shared.Views._Logo2)
        </div>
        <div>
            @RenderSection("PageHeader", false)
        </div>
    </header>

    <div class="layout-container">
        <main>
            @RenderBody()
            @Html.Partial(MVC.Shared.Views._AjaxDialogs)
        </main>
    </div>
    <footer id="footer-main">
        <div class="layout-container">
            <div id="footer-copyright">
                Copyright © 1996-@DateTime.Now.Year by the American College of Surgeons, Chicago, IL 60611-3211
            </div>
        </div>
    </footer>
    <script src="@Url.Content("~/Scripts/errorhandler.js")" type="text/javascript"></script>

<script type="text/javascript">
    var chapterLoadUrl = '@(Url.Action(MVC.Utility.ActionNames.GetChapters, MVC.Utility.Name, new {Area = ""}))';
    var fieldLoadUrl = '@(Url.Action(MVC.Utility.ActionNames.GetFields, MVC.Utility.Name, new {Area = ""}))';
</script>
    @*@RenderSection("scripts", false);*@
</body>
</html>